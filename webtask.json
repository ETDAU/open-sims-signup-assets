{
  "title": "Open Sims Request User Access Form",
  "name": "open-sims-request-account",
  "version": "0.0.1",
  "author": "csc",
  "useHashName": false,
  "description": "This extension allows users to request an account to open sims",
  "type": "application",
  "category": "end_user",
  "logoUrl": "https://cdn.auth0.com/extensions/auth0-delegated-admin/assets/logo.svg",
  "initialUrlPath": "/",
  "docsUrl": "https://github.com/ETDAU/opensims-signup",
  "repository": "https://github.com/ETDAU/opensims-signup",
  "keywords": [
    "auth0",
    "extension"
  ],
  "auth0": {
    "createClient": false,
    "onUninstallPath": "/.extensions/on-uninstall"
  },
  "secrets": {
    "EXTENSION_CLIENT_ID": {
      "description": "Client ID of the application you created in the Auth0 Dashboard",
      "required": true
    },
    "TITLE": {
      "description": "Custom title for the dashboard",
      "example": "Open SIMS User Manager",
      "required": true
    },
    "CONNECTION": {
      "description": "Signup database name",
      "example": "Database Connection Name",
      "required": true
    },
    "REDIRECT_URL_AFTERSIGNUP": {
      "description": "Return Url after signup",
      "example": "https://example.com",
      "required": true
    },
    "RECAPTCHA_SITE_KEY": {
      "description": "Site key for Google reCAPTCHA",
      "example": "656Skljadsfhakjsdfhajklsdfdhasjklf",
      "required": true
    },
    "RECAPTCHA_SITE_SECRET": {
      "description": "Site secret for Google reCAPTCHA",
      "example": "6afakljsdhkfjhas87fjksagfasjkf",
      "required": true
    },
    "RECAPTCHA_VERIFY_URL": {
      "description": "URL to post for reCAPTCHA verification",
      "example": "https://www.google.com/recaptcha/api/siteverify",
      "required": true
    },
    "CUSTOM_CSS": {
      "description": "A CSS file containing custom styles for the extension",
      "example": "https://cdn.fabrikam.com/static/extensions/theme/fabrikam.css",
      "required": false
    }
  }
}
